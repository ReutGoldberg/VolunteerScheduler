generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Users {
  firstName String
  lastName String
  email String @id
  password String
  admin Boolean
}

model Event {
  id Int @id @default(autoincrement())
  title String
  details String
  created_by String
  location String?
  min_volenteering Int?
  max_volenteering Int?
  date String
  label String
}

